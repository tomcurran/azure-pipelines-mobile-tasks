{
    "manifestVersion": 1,
    "id": "mobile-build-tasks",
    "name": "Mobile App Build Tasks",
    "version": "0.4.0",
    "publisher": "tomcurran",
    "galleryFlags": [
        "Preview"
    ],
    "repository": {
        "type": "git",
        "uri": "https://github.com/tomcurran/azure-pipelines-mobile-tasks"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Tasks for building mobile apps in Azure Pipelines.",
    "categories": [
        "Build and release"
    ],
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "LICENSE"
        }
    },
    "tags": [
        "version", 
        "versioning",
        "build",
        "replacement",
        "android",
        "ios",
        "xamarin",
        "package",
        "manifest",
        "info.plist"
    ],
    "links": {
        "repository": {
            "uri": "https://github.com/tomcurran/azure-pipelines-mobile-tasks"
        },
        "issues": {
            "uri": "https://github.com/tomcurran/azure-pipelines-mobile-tasks/issues"
        }
    },
    "branding": {
        "color": "rgb(72,13,128)",
        "theme": "dark"
    },
    "icons": {
        "default": "images/extension-icon.png"        
    },
    "files": [
        {
            "path": "tasks/AndroidManifestRead"
        },
        {
            "path": "tasks/GitLastCommitDate"
        },
        {
            "path": "tasks/ChangelogRead"
        }
    ],
    "contributions": [
        {
            "id": "android-manifest-read",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/AndroidManifestRead"
            }
        },
        {
            "id": "git-last-commit-date",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/GitLastCommitDate"
            }
        },
        {
            "id": "changelog-read",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/ChangelogRead"
            }
        }
    ]
}